div.event-form
  h3 Add extra task
  .line-break-sm
  = form_for @participation do |p|
    .field
      = p.label :description
      = p.text_field :description
    .field
      = p.label :points
      = p.number_field :points
    .field
      = p.label :fresher_can_participate, "Freshers are allowed to fulfill?"
      = p.check_box :fresher_can_participate, {checked: @event.participations.events.first.fresher_can_participate}
    .field
      = p.label :tutor_can_participate, "Tutors are allowed to fulfill?"
      = p.check_box :tutor_can_participate, {checked: @event.participations.events.first.tutor_can_participate}
    = p.hidden_field :event_id, :value => @event.id
    = p.hidden_field :participation_type, :value => 'event_extra'
    br
    = p.submit 'Add', :class => 'btn btn-primary'
